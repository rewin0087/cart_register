<div class="container mx-auto mt-8 px-4">
  <div id="cart-notice"></div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @products.each do |product| %>
      <div class="bg-white rounded-lg shadow p-6 flex flex-col h-full">
        <h5 class="text-lg font-semibold mb-2"><%= product.name %></h5>
        <p class="text-gray-700 mb-4"><%= number_to_currency(product.price) %></p>
        <%= form_with url: add_product_carts_path(product_id: product.id), method: :post, remote: true, class: "mt-auto flex items-center space-x-2" do |f| %>
          <%= f.number_field :quantity, value: 1, min: 1, class: "w-16 px-2 py-1 border rounded" %>
          <%= f.submit "Add to Cart", class: "inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>